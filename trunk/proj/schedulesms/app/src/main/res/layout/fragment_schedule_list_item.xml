<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="bottom">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:id="@+id/schedule_item_icon"
                android:src="@drawable/schedule_repeat"
                android:layout_marginRight="10dp"
                android:layout_marginTop="2dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="3dp"
            android:weightSum="1"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="5dp">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="(XXXX) - XXX XXX XXXX..."
                android:id="@+id/schedule_item_number"
                android:textStyle="bold" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="YYYY-MM-DD"
                android:id="@+id/schedule_item_schedule_info"
                android:textSize="10dp"
                android:textStyle="bold"
                android:textColor="#ffe9594a" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Message content content content.."
                android:id="@+id/schedule_item_message"
                android:textSize="11dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>